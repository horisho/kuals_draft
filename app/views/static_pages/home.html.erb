<div class="jumbotron">
  <h1>KUALS ドラフト</h1>
  <% if logged_in? %>
    <%= link_to "指名する", draft_path, class: "btn btn-primary" %>
    <% if current_user.admin? %>
      <%= link_to "指名一覧", picks_path, class:"btn btn-danger" %><br>
      <% (1..6).each do |n| %>
        <% pick = current_user.picks.find_by(round: n) %>
        <%= link_to "#{n}位指名", pick, style: "padding: 2px;" %>
      <% end %>
    <% end %>
  <% else %>
    <%= link_to "新規", signup_path, class: "btn btn-primary" %>
    <%= link_to "ログイン", login_path, class: "btn btn-success" %>
  <% end %>
  
</div>

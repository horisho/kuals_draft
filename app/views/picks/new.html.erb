<h1>指名</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@pick) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :指名順位 %>
      <%= f.select :round, [1,2,3,4,5,6], class: 'form-control' %>

      <%= f.label :作品名 %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :キャラクター名 %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :ひとこと %>
      <div class="field">
        <%= f.text_area :remark, placeholder: "（ひとこととは言ってない）" %>
      </div>

      <%= f.submit "指名", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
<p></p>

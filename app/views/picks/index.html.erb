<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:draft, url: retrieval_path) do |f| %>
      <%= f.label :指名順位 %>
      <%= f.select :number, [1,2,3,4,5,6], class: 'form-control' %>
      <%= f.submit "一覧を見る", class: 'btn' %>
    <% end %>
  </div>
</div>

<ol class="picks">
  <%= render @picks if current_user.admin? %>
</ol>

<%= will_paginate @picks %>
